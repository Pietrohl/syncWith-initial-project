{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false
  },
  "typeRoots": [
    "node_modules/@types",
    "src/@types"
  ],
  "exclude": [
    "node_modules",
    "spec",
    "src/**/*.mock.ts",
    "src/public/"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/**.*.ts",
  ]
}